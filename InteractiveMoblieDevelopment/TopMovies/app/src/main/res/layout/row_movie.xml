<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Movie Title"
        android:textColor="#FF5722"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/txtvTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtvTitle" />

    <TextView
        android:id="@+id/txtvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="#FF5722"
        android:padding="10dp"
        android:text="5.0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtvYear"
        app:layout_constraintEnd_toStartOf="@+id/iBtnDel"
        app:layout_constraintTop_toTopOf="@+id/txtvTitle"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/iBtnDel"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtvRating"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/baseline_delete_forever_24" />
</androidx.constraintlayout.widget.ConstraintLayout>